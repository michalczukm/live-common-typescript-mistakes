{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": false,
    "removeComments": true,
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "ES2019",
      "DOM"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
