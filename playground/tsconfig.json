{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitThis": false,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "lib": [
      "ES2019",
      "DOM"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
